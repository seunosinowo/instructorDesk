{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./", // Include both src/ and tests/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node", "jest", "express", "multer"],
    "moduleResolution": "node"
  },
  "include": ["backend/src/**/*", "backend/tests/**/*", "backend/src/types/**/*"],
  "exclude": ["node_modules", "dist"]
}